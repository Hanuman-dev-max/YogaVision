@using Microsoft.AspNetCore.Identity; 
@using YogaVision.Infrastructure.Data.Identity;
@using YogaVision.Common;
@inject SignInManager<ApplicationUser> SignInManager;
@inject UserManager<ApplicationUser> UserManager;

<div class="header_top_extra d-flex flex-row align-items-center justify-content-start ml-auto">
    <div class="header_top_nav">
        <ul class="d-flex flex-row align-items-center justify-content-start">
          
                @if (SignInManager.IsSignedIn(User))
                {
                    <li >
                        <a  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @(this.User.Identity.Name)!</a>
                    </li>
                    if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                    {
                        <li >
                            <a  asp-area="Administration" asp-controller="Dashboard" asp-action="Index" title="Admin">Admin</a>
                        </li>
                    }
                    <li c>
                        <form class="form-inline" asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)">
                            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a  asp-controller="User" asp-action="Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a  asp-controller="User" asp-action="Login">Login</a>
                    </li>
                }
            
        </ul>
    </div>
</div>



