                    <div class="col-lg-8">
                        <div class="modal-body">
                            <!-- Project details-->

                            <img class="img-fluid d-block mx-auto" src=@Model.ImageUrlThird alt="..." />
                            <button class="btn btn-primary btn-xl text-uppercase" data-dismiss="modal" type="button">
                                <i class="fas fa-xmark me-1"></i>
                                Затвори
