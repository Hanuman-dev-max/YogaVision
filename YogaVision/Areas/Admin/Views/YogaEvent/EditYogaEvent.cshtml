@model YogaVision.Core.Models.YogaEvent.YogaEventInputModel
@{
    this.ViewData["Title"] = "Добави Йога Събитие";
    var instructors = this.ViewData["Instructors"] as SelectList;
    var studios = this.ViewData["Studios"] as SelectList;
}
@section Styles {
    <link href="~/css/date-picker.css" rel="stylesheet" asp-append-version="true" />
}

    <div class="col-lg-6">
        <h2>Добави Йога Събитие</h2>
        <form autocomplete="off">
            <div class="card-header">
                <div class="mx-0 mb-0 row justify-content-sm-center justify-content-start px-1">
                    <input type="text" id="dp1" class="datepicker" placeholder="&#xf073; Pick Date" style="font-family:Arial, FontAwesome" name="date" readonly />
                </div>
            </div>
            <div class="card-body p-3 p-sm-5">
                <div class="row text-center mx-0">
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">9:00AM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">9:30AM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">10:00AM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">10:30AM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">11:00AM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">11:30AM</div>
                    </div>
                </div>
                <div class="row text-center mx-0">
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">12:00PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">12:30PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">1:00PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">1:30PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">2:00PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">2:30PM</div>
                    </div>
                </div>
                <div class="row text-center mx-0">
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">3:00PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">3:30PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">4:00PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">4:30PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">5:00PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">5:30PM</div>
                    </div>
                </div>
                <div class="row text-center mx-0">
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">6:00PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">6:30PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">7:00PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">7:30PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">8:00PM</div>
                    </div>
                    <div class="col-md-2 col-4 my-1 px-2">
                        <div class="cell py-1">8:30PM</div>
                    </div>
                </div>
            </div>
        </form>

        <form method="post" enctype="multipart/form-data" class="pt-4">

            @Html.HiddenFor(model => model.Id)
            <div class="form-group row">

                <label class="col-sm-2 col-form-label">Дата</label>
                <div class="col-sm-10">
                    <div id="selectedDate" asp-for="@Model.Date" class="form-control" hidden></div>
                    <input asp-for="@Model.Date" value="@Model.Date" class="form-control" required readonly />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Час</label>
                <div class="col-sm-10">
                    <div id="selectedTime" asp-for="@Model.Time" class="form-control" hidden></div>
                    <input asp-for="@Model.Time" value="@Model.Time" class="form-control" required readonly />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Описание</label>
                <div class="col-sm-10">
                    <textarea type="text" asp-for="@Model.Description" class="form-control" required="required"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Продължителност</label>
                <div class="col-sm-10">
                    <input class="html-duration-picker" data-hide-seconds asp-for="@Model.Duration" class="form-control" required="required">
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Места</label>
                <div class="col-sm-10">
                    <input type="number" min="1" max="30" asp-for="@Model.Seats" class="form-control" required="required">
                    <span asp-validation-for="Seats" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Инструктор</label>
                <div class="col-sm-10">
                    <select asp-for="@Model.InstructorId" class="form-control" asp-items="@instructors">
                    </select>
                    <span asp-validation-for="InstructorId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Студио</label>
                <div class="col-sm-10">
                    <select asp-for="@Model.StudioId" class="form-control" asp-items="@studios">
                    </select>
                    <span asp-validation-for="StudioId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 text-right">
                    <button type="submit" class="btn btn-success"
                        asp-area="Admin" asp-controller="YogaEvent" asp-action="EditYogaEvent">
                        Редектирай Йога Събитие
                    </button>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="YogaEvents" asp-action="Index">Отмени</a>
                </div>
            </div>
        </form>
    </div>




    <!--
    <div id="selectedDate"></div>
    <div id="selectedTime"></div>
    -->
    @section Scripts {
    <script src="~/js/bootstrap-datepicker.js" asp-append-version="true"></script>
    <script src="~/js/date-picker.js" asp-append-version="true"></script>
    <script src="~/js/html-duration-picker.min.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $.validator.setDefaults({
            ignore: ""
        })
    </script>
}