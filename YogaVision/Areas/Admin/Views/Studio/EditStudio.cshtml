@model YogaVision.Core.Models.Studio.StudioEditModel
@{
    this.ViewData["Title"] = "Редактирай Студио";
    var cities = this.ViewData["Cities"] as SelectList;
}

<div class="col-lg-6">
    <h2>Редактирай Студио</h2>
    <form method="post"  enctype="multipart/form-data" class="pt-4">
        @Html.HiddenFor(model => model.Id)
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Име</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Name" class="form-control" required="required">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row">
            
            <label class="col-sm-2 col-form-label">Старо Изображение</label>
            <img class="align-self-center" src="@Model.OldImage" style="width:240px;height:160px;">
            @Html.HiddenFor(model => model.OldImage)
        </div>
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Ново Изображение</label>
            <div class="col-sm-10">
                <div class="col-sm-10">
                    <input type="file" asp-for="@Model.Image" class="form-control-file " >
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Град</label>
            <div class="col-sm-10">
                <select asp-for="@Model.CityId" class="form-control" asp-items="@cities">
                </select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Адрес</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Address" class="form-control" required="required">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" asp-area="Admin" asp-controller="Studio" asp-action="EditStudio" class="btn btn-success">
                    Запази промените
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Admin" asp-controller="Studio" asp-action="Index">Отмени</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/upload-image.js" asp-append-version="true"></script>
}
